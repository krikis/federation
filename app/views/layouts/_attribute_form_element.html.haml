.control-group.row-fluid
  %label.control-label{for: 'dummy_id'}= label
  .controls
    - if type == :datetime
      = select_date value, :order => [:day, :month, :year], prefix: param, field_name: key, include_position: true, include_blank: true
    - else
      = text_field_tag "#{param}[#{key}]", value, class: 'span12', maxlength: 40, placeholder: key