-# render object show views
.m_patients
  = render partial: 'layouts/index', locals: {objects: @m_patients, object_class: MPatient, edit_mode: true}
.u_patients
  = render partial: 'layouts/index', locals: {objects: @u_patients, object_class: UPatient, edit_mode: true}
.gis
  = render partial: 'gis/index', locals: {gis: @gis}
.epd_patients
  = render partial: 'epd_patients/index', locals: {epd_patients: @epd_patients}

-# render object editors
- ([MPatient.new] + @m_patients).each do |object|
  = render partial: 'layouts/edit', locals: {object: object, primary_key: 'm_patient_nr', edit_mode: true}
